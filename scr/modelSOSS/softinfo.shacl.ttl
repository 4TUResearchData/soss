# metamodel_version: 1.7.0
@prefix mls: <http://www.w3.org/ns/mls> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix softinfo: <https://w3id.org/linkml/examples/softinfo> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

softinfo:Container a sh:NodeShape ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:class mls:Software ;
            sh:nodeKind sh:IRI ;
            sh:order 0 ;
            sh:path softinfo:softwares ] ;
    sh:targetClass softinfo:Container .

mls:Software a sh:NodeShape ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:maxCount 1 ;
            sh:order 0 ;
            sh:path softinfo:id ],
        [ sh:description "name of the repo" ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:order 1 ;
            sh:path schema:name ],
        [ sh:description "other names for the repo" ;
            sh:order 2 ;
            sh:path softinfo:aliases ],
        [ sh:maxCount 1 ;
            sh:order 3 ;
            sh:path softinfo:function ;
            sh:pattern "^[\\d\\(\\)\\-]+$" ],
        [ sh:maxCount 1 ;
            sh:maxInclusive 200 ;
            sh:minInclusive 0 ;
            sh:order 4 ;
            sh:path softinfo:dependencies ] ;
    sh:targetClass mls:Software .


